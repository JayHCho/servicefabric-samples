<?xml version="1.0" encoding="utf-8" ?>
<ServiceManifest Name="StatelessPiService" 
                 Version="1.0" 
                 xmlns="http://schemas.microsoft.com/2011/01/fabric" 
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <Description>Service that implements a stateless Pi calculator service</Description>
  
  <ServiceTypes>
    <StatelessServiceType ServiceTypeName="StatelessPiService" />
  </ServiceTypes>
  
  <CodePackage Name="Code" Version="1.0">
    <EntryPoint>
      <ExeHost>
        <Program>StatelessPiServiceHost.exe</Program>
      </ExeHost>
    </EntryPoint>
  </CodePackage>
  
</ServiceManifest>
